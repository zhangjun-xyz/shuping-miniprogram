/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 20rpx;
}

.btn-primary:hover {
  background-color: #0d7ed8;
}

.btn-secondary {
  background-color: #f0f2f5;
  color: #333;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 20rpx;
}

.btn-test {
  background-color: #52c41a;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 20rpx;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  padding: 40rpx;
  margin: 20rpx;
}

/* 文本样式 */
.text-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #262626;
  margin-bottom: 20rpx;
}

.text-subtitle {
  font-size: 28rpx;
  color: #595959;
  margin-bottom: 16rpx;
}

.text-body {
  font-size: 28rpx;
  color: #8c8c8c;
  line-height: 1.6;
}

/* 图片样式 */
.book-cover {
  width: 300rpx;
  height: 400rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 评分样式 */
.rating {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #fa8c16;
  font-weight: bold;
}

.rating-star {
  color: #fadb14;
  margin-right: 8rpx;
}

/* 加载样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 错误样式 */
.error {
  text-align: center;
  padding: 60rpx;
  color: #f5222d;
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 120rpx;
  color: #bfbfbf;
}

/* 页面基础样式 */
page {
  background-color: #f5f5f5;
  height: 100%;
}

.page-container {
  min-height: 100vh;
  padding: 20rpx;
}