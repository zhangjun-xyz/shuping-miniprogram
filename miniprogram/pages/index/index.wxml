<!--index.wxml-->
<view class="page-container">
  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{isLoading}}">
    <view class="loading-content">
      <view class="loading-spinner"></view>
      <text class="loading-text">{{loadingText}}</text>
    </view>
  </view>

  <!-- 主内容区域 -->
  <view class="main-content" wx:else>
    <!-- Logo和标题区域 -->
    <view class="logo-section">
      <view class="logo-icon">📚</view>
      <text class="main-title">书评助手</text>
      <text class="main-subtitle">AI识别书籍封面，即刻查看豆瓣评分</text>
    </view>

    <!-- 主操作按钮 -->
    <view class="action-section">
      <button class="main-action-btn" bindtap="takePhotoAndRecognize">
        <view class="btn-icon">📷</view>
        <view class="btn-content">
          <text class="btn-title">看豆瓣评分</text>
        </view>
      </button>

      <!-- 次要选项 -->
      <view class="secondary-actions">
        <button class="secondary-btn" bindtap="chooseImageAndRecognize">
          <text class="secondary-btn-icon">🖼️</text>
          <text class="secondary-btn-text">从相册选择</text>
        </button>
      </view>
    </view>

    <!-- 底部提示 -->
    <view class="bottom-tips">
      <text class="tip-item">📖 清晰拍摄书籍封面</text>
      <text class="tip-item">⭐ 快速查看豆瓣评分</text>
    </view>
  </view>
</view>