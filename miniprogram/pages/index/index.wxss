/* index.wxss */

.header {
  text-align: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: white;
  margin-bottom: 40rpx;
}

.image-preview {
  text-align: center;
  margin-bottom: 40rpx;
}

.book-cover-large {
  width: 500rpx;
  height: 600rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
  margin-bottom: 30rpx;
}

.image-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.action-btn {
  width: 500rpx;
  height: 100rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.manual-form {
  margin: 40rpx 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1890ff;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.form-actions button {
  width: 45%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f2f5;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.instructions {
  margin: 40rpx 20rpx;
}

.instruction-list {
  margin-top: 20rpx;
}

.instruction-item {
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 按钮禁用状态 */
button[disabled] {
  opacity: 0.6;
  pointer-events: none;
}