/* index.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #ffffff 100%);
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 加载遮罩层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f2f5;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #595959;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 40rpx 60rpx;
}

/* Logo和标题区域 */
.logo-section {
  text-align: center;
  margin-top: 100rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.main-title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #262626;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.main-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8c8c8c;
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

/* 主操作按钮 */
.main-action-btn {
  width: 600rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #1890ff 0%, #0d7ed8 100%);
  border: none;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 48rpx rgba(24, 144, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  padding: 0;
  transition: all 0.3s ease;
}

.main-action-btn::after {
  border: none;
}

.main-action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.4);
}

.btn-icon {
  font-size: 64rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.btn-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.btn-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.btn-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 次要操作按钮 */
.secondary-actions {
  width: 100%;
  display: flex;
  justify-content: center;
}

.secondary-btn {
  width: 280rpx;
  height: 88rpx;
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.secondary-btn::after {
  border: none;
}

.secondary-btn:active {
  background: #fafafa;
  transform: scale(0.98);
}

.secondary-btn-icon {
  font-size: 36rpx;
}

.secondary-btn-text {
  font-size: 28rpx;
  color: #595959;
}

/* 底部提示 */
.bottom-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 60rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #bfbfbf;
  display: flex;
  align-items: center;
  gap: 8rpx;
}