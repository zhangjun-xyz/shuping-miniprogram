/* result.wxss */

.header-actions {
  padding: 20rpx;
  position: sticky;
  top: 0;
  background: white;
  z-index: 100;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
}

.book-info-card {
  margin: 20rpx;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.recognition-type {
  font-size: 24rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #b7eb8f;
}

.book-details {
  space-y: 20rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.detail-label {
  font-size: 26rpx;
  color: #8c8c8c;
  width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #262626;
  flex: 1;
  word-break: break-all;
}

.douban-info-card {
  margin: 20rpx;
}

.douban-header {
  margin-bottom: 30rpx;
}

.rating-section {
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.rating-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 16rpx;
}

.rating-score {
  font-size: 72rpx;
  font-weight: bold;
  color: #fa8c16;
  line-height: 1;
}

.rating-total {
  font-size: 32rpx;
  color: #8c8c8c;
  margin-left: 8rpx;
}

.rating-stars {
  margin-bottom: 12rpx;
}

.star {
  font-size: 32rpx;
  margin: 0 2rpx;
}

.rating-people {
  font-size: 24rpx;
  color: #8c8c8c;
}

.no-rating {
  text-align: center;
  padding: 60rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.no-rating-text {
  display: block;
  font-size: 36rpx;
  color: #bfbfbf;
  margin-bottom: 12rpx;
}

.no-rating-desc {
  font-size: 24rpx;
  color: #d9d9d9;
}

.book-meta {
  margin-bottom: 30rpx;
}

.meta-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.meta-label {
  font-size: 24rpx;
  color: #8c8c8c;
  width: 140rpx;
  flex-shrink: 0;
}

.meta-value {
  font-size: 26rpx;
  color: #595959;
  flex: 1;
  word-break: break-all;
}

.book-intro {
  margin-bottom: 30rpx;
}

.intro-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #262626;
  margin-bottom: 16rpx;
}

.intro-content {
  font-size: 26rpx;
  color: #595959;
  line-height: 1.8;
}

.intro-toggle {
  margin-top: 16rpx;
  text-align: center;
}

.toggle-btn {
  font-size: 24rpx;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border: 1rpx solid #1890ff;
  border-radius: 16rpx;
}

/* 豆瓣短评样式 */
.short-comments {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.comments-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.comments-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #262626;
}

.toggle-comments-btn {
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 20rpx;
  height: auto;
  line-height: normal;
}

.toggle-comments-btn::after {
  border: none;
}

.comments-list {
  margin-top: 20rpx;
}

.comments-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner-small {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f2f5;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text-small {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.comment-item {
  background: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #1890ff;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-author {
  font-size: 24rpx;
  color: #8c8c8c;
  flex: 1;
}

.comment-rating {
  display: flex;
}

.comment-rating .star {
  font-size: 20rpx;
  color: #fadb14;
  margin-left: 2rpx;
}

.comment-content {
  display: block;
  font-size: 26rpx;
  color: #262626;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.comment-footer {
  display: flex;
  justify-content: flex-end;
}

.useful-count {
  font-size: 22rpx;
  color: #8c8c8c;
}

.no-comments {
  text-align: center;
  padding: 40rpx 0;
}

.no-comments-text {
  font-size: 26rpx;
  color: #bfbfbf;
}

.douban-link {
  text-align: center;
  margin-top: 20rpx;
}

.link-btn {
  width: 300rpx;
  height: 80rpx;
}

.no-result {
  margin: 20rpx;
  text-align: center;
  padding: 80rpx 40rpx;
}

.no-result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-result-title {
  display: block;
  font-size: 32rpx;
  color: #262626;
  margin-bottom: 12rpx;
}

.no-result-desc {
  font-size: 26rpx;
  color: #8c8c8c;
  line-height: 1.6;
}

.retry-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #fafafa;
  border-radius: 12rpx;
}

.retry-title {
  display: block;
  font-size: 28rpx;
  color: #262626;
  margin-bottom: 16rpx;
}

.retry-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: white;
}

.retry-btn {
  width: 100%;
  height: 80rpx;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.1);
}

.action-buttons button {
  flex: 1;
  height: 80rpx;
  margin: 0 10rpx;
}

/* 为底部按钮留出空间 */
.page-container {
  padding-bottom: 140rpx;
}